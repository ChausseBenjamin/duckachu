{
  "manifest_version": 2,
  "name": "Duckachu",
  "version": "1.0.0",
  "description": "Lightning fast duck bangs",
  "homepage_url": "https://github.com/duckachu/duckachu",
  "author": "Duckachu Contributors",
  
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "*://*/*"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.bing.com/search*",
        "*://duckduckgo.com/*",
        "*://search.yahoo.com/search*",
        "*://yandex.com/search*",
        "*://www.baidu.com/s*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    "bangs.json"
  ],
  
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}